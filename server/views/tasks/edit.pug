extends ../layouts/application.pug

block header
  = t('views.tasks.edit.edit')

block content
  form(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', errors)(type="text")
    +input(task, 'description', errors)(type="text")
    .form-group
      label(for='creatorSelect')= 'creator'
      select(class="form-control", name='data[creator_id]', id='creatorSelect')
        each user in users
          option(value=user.id)= `${user.fullName()}`
    .form-group
      label(for='executorSelect')= 'executor'
      select(class="form-control", name='data[executor_id]', id='executorSelect')
        each user in users
          option(value=user.id)= `${user.fullName()}`
    .form-group
      label(for='statusSelect')= 'status'
      select(class="form-control", name='data[status_id]', id='statusSelect')
        each status in statuses
          option(value=status.id)= `${status.name}`
    .form-group
      label(for='labelsSelect')= 'labels'    
      select(class="form-control custom-select", size='3', multiple, name='data[labels]', id='labelsSelect')
        each label in labels
          option(value=label.id)= `${label.name}`
    
    input(name="_method" type="hidden" value="patch")
    +submit(user)(value=t('views.tasks.new.submit'))
