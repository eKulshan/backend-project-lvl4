extends ../layouts/application.pug

block header
  = t('views.tasks.edit.edit')

block content
  form(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', errors)(type="text")
    +input(task, 'description', errors)(type="text")
    +input(task, 'status_id', errors)(type="number")
    +input(task, 'creator_id', errors)(type="number")
    +input(task, 'executor_id', errors)(type="number")
    input(name="_method" type="hidden" value="patch")
    +submit(user)(value=t('views.tasks.new.submit'))
