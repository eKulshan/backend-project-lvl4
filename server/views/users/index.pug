extends ../layouts/application

block header
  h1= 'Пользователи'
block content
  table.table.table-hover.border.border-grey
    thead.thead-light
      tr
        th(scope='col')= t('views.users.id')
        th(scope='col')= t('views.users.fullName')
        th(scope='col')= t('views.users.email')
        th(scope='col')= t('views.users.createdAt')
        th
    tbody
      each user in users
        tr
          td= user.id
          td= user.fullName()
          td= user.email
          td= formatDate(user.createdAt)
          td
            +buttonTo(`/users/${user.id}/edit`, 'get')(class="btn btn-sm btn-outline-info m-1" value=t('layouts.application.updateProfile'))
            +buttonTo(`/users/${user.id}`, 'post', 'delete')(class="btn btn-sm btn-outline-danger m-1" value=t('layouts.application.deleteProfile'))
  