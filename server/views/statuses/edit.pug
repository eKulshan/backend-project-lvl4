extends ../layouts/application.pug

block header
  = t('views.statuses.edit.edit')

block content
  form(action=`/statuses/${status.id}` method='post')
    +input(status, t('views.statuses.index.name'), 'name', errors)(type="text")
    input(name="_method" type="hidden" value="patch")
    +submit(status)(value=t('views.statuses.edit.submit'))
