extends ../layouts/application.pug

block header
  = t('views.labels.edit.edit')

block content
  form(action=`/labels/${label.id}` method='post')
    +input(label, t('views.statuses.index.name'), 'name', errors)(type="text")
    input(name="_method" type="hidden" value="patch")
    +submit(label)(value=t('views.labels.new.submit'))
