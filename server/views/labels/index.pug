extends ../layouts/application

block header
  .container.row
    .col-auto
      h1= 'Метки задач'
    .col-auto
       if isAuthenticated()
        a.btn.btn-primary.ml-auto(href=route('newLabel'))= t('views.labels.index.create')
block content
  table.table
    thead
      tr
        th(scope='col')= t('views.labels.index.id')
        th(scope='col')= t('views.labels.index.name')
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td
            a.btn.btn-link.text-warning(href=`/labels/${label.id}/edit`)= t('views.labels.index.edit')
          td  
            form(action=`/labels/${label.id}` method='post')
              input(type='hidden' name='_method' value='delete')
              input.btn.btn-link.text-danger(type='submit' value= t('views.labels.index.delete'))